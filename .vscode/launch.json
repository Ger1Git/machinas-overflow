{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach",
            "port": 9229,
            "request": "attach",
            "skipFiles": ["<node_internals>/**"],
            "type": "node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Nuxt",
            "program": "${workspaceFolder}/node_modules/.bin/nuxt",
            "args": ["dev"],
            "cwd": "${workspaceFolder}",
            "autoAttachChildProcesses": true,
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
